[flake8]
# PATH Framework - Flake8 Configuration
# Comprehensive linting configuration for the entire application stack

# Maximum line length
max-line-length = 88

# Select error codes to check
select = 
    E,    # pycodestyle errors
    W,    # pycodestyle warnings
    F,    # pyflakes
    C,    # mccabe complexity
    B,    # flake8-bugbear
    I,    # isort
    N,    # pep8-naming

# Ignore specific error codes
ignore = 
    E203,   # whitespace before ':'
    E501,   # line too long (handled by black)
    W503,   # line break before binary operator
    E231,   # missing whitespace after ','
    E402,   # module level import not at top of file
    F401,   # imported but unused (handled by autoflake)
    F841,   # local variable assigned but never used
    B008,   # do not perform function calls in argument defaults
    B902,   # blind except
    N802,   # function name should be lowercase
    N803,   # argument name should be lowercase
    N806,   # variable in function should be lowercase

# Exclude directories and files
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    docs/_build,
    migrations,
    .tox,
    .coverage,
    projects/*/  # Exclude generated projects

# Per-file ignores
per-file-ignores =
    __init__.py: F401,E402
    */migrations/*: E501,F401
    */tests/*: B008,S101,F401
    demo_*.py: E501,F401,B008
    examples/*: E501,F401,B008
    setup.py: E501,F401

# McCabe complexity settings
max-complexity = 10

# Import order settings
import-order-style = google
application-import-names = path_framework

# Docstring settings
docstring-convention = google
