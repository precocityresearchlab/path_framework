FROM python:3.11-slim

WORKDIR /app

# Install uv
RUN pip install uv

# Copy project files
COPY pyproject.toml uv.lock ./

# Install dependencies with uv
RUN uv sync --frozen

# Copy source code
COPY src/ ./src/

# Set environment variables
ENV DEPLOYMENT_MODE=phase_containers

# Expose port
EXPOSE 8000

# Run phase-specific agents
CMD ["uv", "run", "python", "-m", "src.main"]